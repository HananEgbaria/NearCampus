<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.group7.nearcampus.Container"
    android:background="#232323">

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tabLayout"
        android:background="#232323"
        app:tabTextColor="#ffffff"
        app:tabSelectedTextColor="#39b2f9"
        android:fillViewport="false"
        android:layout_below="@+id/Placename"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <android.support.v4.view.ViewPager
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view2"
        android:layout_below="@+id/tabLayout"
        android:layout_centerHorizontal="true"
        android:background="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/Placename"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#39b2f9"
        android:textStyle="bold|normal|italic"
        android:textSize="30dp" />

    <ImageButton
        android:id="@+id/addToFavo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/addtofavorites"
        android:layout_alignTop="@+id/Placename"
        android:layout_alignRight="@+id/tabLayout"
        android:layout_alignEnd="@+id/tabLayout" />
</RelativeLayout>
